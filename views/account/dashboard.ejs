            .content-left-column,
            .content-right-column {
                gap: 20px;
            }
            
            .header-content {
                flex-direction: column;
                text-align: center;
                gap: 20px;
            }
            
            .luxury-time-display {
                text-align: center;
            }
            
            .account-greeting {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }

            .favorites-grid-premium {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .luxury-dashboard {
                padding: 15px;
                overflow-x: hidden;
            }

            .premium-favorites-section {
                padding: 30px 20px;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .favorites-grid-premium {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .favorite-cta {
                grid-template-columns: 1fr;
            }

            .empty-state-actions {
                flex-direction: column;
            }

            .view-all-premium-btn {
                padding: 15px 25px;
                font-size: 1rem;
            }

            .inventory-card {
                height: auto;
            }

            .stats-grid-premium {
                grid-template-columns: 1fr;
            }

            .quick-actions-premium {
                grid-template-columns: 1fr;
            }

            .luxury-title {
                font-size: 2rem;
            }

            .account-greeting {
                font-size: 1.3rem;
            }

            .management-card {
                padding: 20px;
            }

            .info-row {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
        }

        @media (max-width: 480px) {
            .luxury-dashboard {
                padding: 12px;
            }

            .premium-header {
                padding: 20px 15px;
            }

            .luxury-title {
                font-size: 1.6rem;
            }

            .account-greeting {
                font-size: 1.1rem;
            }

