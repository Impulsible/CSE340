<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="luxury-theme">
    
    <main class="luxury-dashboard">
        <!-- Premium Header Section -->
        <section class="premium-header">
            <div class="header-content">
                <div class="welcome-section">
                    <!-- TASK 3: H2 greeting based on account type -->
                    <h2 class="account-greeting">
                        <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
                            Welcome <%= user.firstName %>, <span class="role-badge"><%= user.account_type %></span>
                        <% } else { %>
                            Welcome <%= user.firstName %>
                        <% } %>
                    </h2>
                    
                    <h1 class="luxury-title">
                        <span id="dynamic-greeting">Good Morning</span>, 
                        <span class="accent-name"><%= user.firstName %></span>
                    </h1>
                    <p class="luxury-subtitle">Your premium automotive experience awaits</p>
                </div>
                <div class="luxury-time-display">
                    <div class="time-primary" id="luxury-time">Loading...</div>
                    <div class="date-secondary" id="luxury-date">Loading...</div>
                    <div class="weather-badge" id="luxury-weather">
                        <i class="fas fa-sync fa-spin"></i>
                        <span>Loading weather...</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Account Management Section (TASK 3) -->
        <section class="account-management-section">
            <div class="management-card">
                <div class="management-header">
                    <h3><i class="fas fa-user-cog"></i> Account Management</h3>
                </div>
                
                <div class="management-content">
                    <!-- TASK 3: User Info Display -->
                    <div class="user-info-display">
                        <div class="info-row">
                            <span class="info-label">Full Name:</span>
                            <span class="info-value"><%= user.firstName %> <%= user.lastName %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span class="info-value"><%= user.email %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Account Type:</span>
                            <span class="info-value account-type <%= user.account_type.toLowerCase() %>">
                                <%= user.account_type %>
                            </span>
                        </div>
                    </div>
                    
                    <!-- TASK 3: Update Account Link -->
                    <div class="update-account-link">
                        <a href="/account/update/<%= user.userId || user.account_id %>" class="update-btn">
                            <i class="fas fa-user-edit"></i>
                            Update Account Information
                        </a>
                    </div>
                    
                    <!-- TASK 3: Inventory Management (Only for Employee/Admin) -->
                    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
                        <div class="inventory-management-section">
                            <h3><i class="fas fa-cog"></i> Inventory Management</h3>
                            <p class="management-description">
                                As an <%= user.account_type %>, you have access to inventory management features.
                            </p>
                            <a href="/inv/manage" class="inventory-btn">
                                <i class="fas fa-car"></i>
                                Manage Inventory
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>

        <!-- Real-time Stats Grid -->
        <section class="stats-grid-premium">
            <div class="stat-card-luxury">
                <div class="stat-icon-luxury">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="stat-content-luxury">
                    <div class="stat-value" id="viewed-count">0</div>
                    <div class="stat-label">Vehicles Viewed</div>
                </div>
                <div class="stat-trend positive">
                    <i class="fas fa-arrow-up"></i>
                    <span id="viewed-trend">0%</span>
                </div>
            </div>

            <div class="stat-card-luxury">
                <div class="stat-icon-luxury">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="stat-content-luxury">
                    <div class="stat-value" id="saved-count">0</div>
                    <div class="stat-label">Saved Vehicles</div>
                </div>
                <div class="stat-trend positive">
                    <i class="fas fa-plus"></i>
                    <span id="saved-trend">0 new</span>
                </div>
            </div>

            <div class="stat-card-luxury">
                <div class="stat-icon-luxury">
                    <i class="fas fa-search"></i>
                </div>
                <div class="stat-content-luxury">
                    <div class="stat-value" id="search-count">0</div>
                    <div class="stat-label">Recent Searches</div>
                </div>
                <div class="stat-trend neutral">
                    <i class="fas fa-clock"></i>
                    <span id="search-time">Just now</span>
                </div>
            </div>

            <div class="stat-card-luxury">
                <div class="stat-icon-luxury">
                    <i class="fas fa-user-clock"></i>
                </div>
                <div class="stat-content-luxury">
                    <div class="stat-value" id="session-timer">00:00</div>
                    <div class="stat-label">Session Time</div>
                </div>
                <div class="stat-trend neutral">
                    <i class="fas fa-play"></i>
                    Active
                </div>
            </div>
        </section>

        <!-- Main Content Grid - Restructured Layout -->
        <section class="premium-content-grid">
            <!-- Left Column -->
            <div class="content-left-column">
                <!-- Quick Vehicle Search -->
                <div class="premium-card">
                    <div class="card-header">
                        <h2><i class="fas fa-search"></i> Quick Vehicle Search</h2>
                        <div class="live-badge">
                            <i class="fas fa-circle"></i>
                            Live
                        </div>
                    </div>
                    <div class="search-widget-premium">
                        <div class="search-input-group">
                            <i class="fas fa-search"></i>
                            <input type="text" id="vehicle-search" placeholder="Search makes, models, features..." class="luxury-input">
                        </div>
                        <div class="search-filters">
                            <select class="luxury-select" id="price-filter">
                                <option value="">Any Price</option>
                                <option value="0-30000">Under $30K</option>
                                <option value="30000-60000">$30K - $60K</option>
                                <option value="60000-100000">$60K - $100K</option>
                                <option value="100000+">$100K+</option>
                            </select>
                            <select class="luxury-select" id="type-filter">
                                <option value="">All Types</option>
                                <option value="suv">SUV</option>
                                <option value="sedan">Sedan</option>
                                <option value="truck">Truck</option>
                                <option value="luxury">Luxury</option>
                            </select>
                        </div>
                        <div class="search-results-live" id="search-results">
                            <div class="no-results">Start typing to search our premium inventory</div>
                        </div>
                    </div>
                </div>

                <!-- Recently Viewed -->
                <div class="premium-card">
                    <div class="card-header">
                        <h2><i class="fas fa-history"></i> Recently Viewed</h2>
                        <div class="update-time" id="recent-update">Updated just now</div>
                    </div>
                    <div class="recent-vehicles" id="recent-vehicles">
                        <div class="no-recent">
                            <i class="fas fa-eye-slash"></i>
                            <p>No recently viewed vehicles</p>
                            <small>Vehicles you view will appear here</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="content-right-column">
                <!-- Live Inventory Updates (Original Design - Fixed Height) -->
                <div class="premium-card inventory-card">
                    <div class="card-header">
                        <h2><i class="fas fa-bolt"></i> Live Inventory</h2>
                        <div class="live-badge pulse">
                            <i class="fas fa-circle"></i>
                            Real-time
                        </div>
                    </div>
                    <div class="inventory-updates-live">
                        <div class="update-stream" id="inventory-stream">
                            <div class="update-item new-arrival">
                                <div class="update-icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <div class="update-content">
                                    <p>New 2024 BMW 5 Series added</p>
                                    <span class="update-time" id="update-time-1">Just now</span>
                                </div>
                            </div>
                            <div class="update-item price-drop">
                                <div class="update-icon">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                                <div class="update-content">
                                    <p>Price drop on Mercedes-Benz E-Class</p>
                                    <span class="update-time" id="update-time-2">2 min ago</span>
                                </div>
                            </div>
                            <div class="update-item maintenance">
                                <div class="update-icon">
                                    <i class="fas fa-tools"></i>
                                </div>
                                <div class="update-content">
                                    <p>Audi Q7 service completed</p>
                                    <span class="update-time">5 min ago</span>
                                </div>
                            </div>
                        </div>
                        <div class="inventory-stats">
                            <div class="inventory-stat">
                                <span class="stat-number" id="total-vehicles">0</span>
                                <span class="stat-label">Total Vehicles</span>
                            </div>
                            <div class="inventory-stat">
                                <span class="stat-number" id="new-today">0</span>
                                <span class="stat-label">New Today</span>
                            </div>
                            <div class="inventory-stat">
                                <span class="stat-number" id="available-now">0</span>
                                <span class="stat-label">Available Now</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="premium-card">
                    <div class="card-header">
                        <h2><i class="fas fa-rocket"></i> Quick Actions</h2>
                    </div>
                    <div class="quick-actions-premium">
                        <button class="action-btn-premium" onclick="scheduleTestDrive()">
                            <div class="action-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <span>Schedule Test Drive</span>
                            <div class="action-badge">Fast</div>
                        </button>
                        <button class="action-btn-premium" onclick="contactConcierge()">
                            <div class="action-icon">
                                <i class="fas fa-headset"></i>
                            </div>
                            <span>Contact Concierge</span>
                            <div class="action-badge">24/7</div>
                        </button>
                        <button class="action-btn-premium" onclick="viewSavedVehicles()">
                            <div class="action-icon">
                                <i class="fas fa-heart"></i>
                            </div>
                            <span>Saved Vehicles</span>
                            <div class="action-badge" id="saved-badge-2">0</div>
                        </button>
                        <button class="action-btn-premium" onclick="downloadBrochure()">
                            <div class="action-icon">
                                <i class="fas fa-download"></i>
                            </div>
                            <span>Premium Catalog</span>
                            <div class="action-badge">PDF</div>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Premium Favorites Section - Dedicated Space -->
        <section class="premium-favorites-section">
            <div class="section-header-premium">
                <h2 class="section-title">
                    <i class="fas fa-crown"></i>
                    Your Premium Collection
                </h2>
                <div class="section-subtitle">
                    Curated vehicles matched to your preferences
                </div>
            </div>
            
            <div class="favorites-grid-premium" id="recent-favorites">
                <div class="loading-favorites">
                    <div class="loading-content">
                        <div class="loading-spinner-premium">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                        <p>Loading your premium selections...</p>
                        <small class="loading-sub">Discover vehicles tailored for you</small>
                    </div>
                </div>
            </div>
            
            <div class="favorites-footer-premium">
                <a href="/account/favorites" class="view-all-premium-btn">
                    <i class="fas fa-gem"></i>
                    <span>Explore Complete Collection</span>
                    <div class="arrow-container">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </section>

        <!-- Real-time Market Insights -->
        <section class="premium-card full-width">
            <div class="card-header">
                <h2><i class="fas fa-chart-line"></i> Real-time Market Insights</h2>
                <div class="live-badge">
                    <i class="fas fa-sync fa-spin"></i>
                    Live Data
                </div>
            </div>
            <div class="market-insights">
                <div class="insight-item">
                    <div class="insight-value" id="price-trend">$45,230</div>
                    <div class="insight-label">Average Vehicle Price</div>
                    <div class="insight-change positive">
                        <i class="fas fa-arrow-up"></i>
                        +2.3%
                    </div>
                </div>
                <div class="insight-item">
                    <div class="insight-value" id="inventory-count">127</div>
                    <div class="insight-label">Available Vehicles</div>
                    <div class="insight-change positive">
                        <i class="fas fa-plus"></i>
                        +5 today
                    </div>
                </div>
                <div class="insight-item">
                    <div class="insight-value" id="view-count">1,284</div>
                    <div class="insight-label">Daily Views</div>
                    <div class="insight-change positive">
                        <i class="fas fa-eye"></i>
                        +12.7%
                    </div>
                </div>
                <div class="insight-item">
                    <div class="insight-value" id="interest-rate">3.9%</div>
                    <div class="insight-label">Avg. Interest Rate</div>
                    <div class="insight-change neutral">
                        <i class="fas fa-minus"></i>
                        -0.1%
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        // Real-time Clock and Date
        function updateLuxuryTime() {
            const now = new Date();
            
            // Update time
            const timeOptions = { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            };
            document.getElementById('luxury-time').textContent = now.toLocaleTimeString('en-US', timeOptions);
            
            // Update date
            const dateOptions = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            document.getElementById('luxury-date').textContent = now.toLocaleDateString('en-US', dateOptions);
            
            // Update greeting
            updateDynamicGreeting(now);
            
            // Update relative times
            updateRelativeTimes(now);
        }

        function updateDynamicGreeting(now) {
            const hour = now.getHours();
            let greeting;
            
            if (hour < 12) {
                greeting = "Good Morning";
            } else if (hour < 17) {
                greeting = "Good Afternoon";
            } else {
                greeting = "Good Evening";
            }
            
            document.getElementById('dynamic-greeting').textContent = greeting;
        }

        // Session Timer
        let sessionStart = Date.now();
        function updateSessionTimer() {
            const now = Date.now();
            const diff = now - sessionStart;
            const minutes = Math.floor(diff / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            const formattedTime = 
                String(minutes).padStart(2, '0') + ':' +
                String(seconds).padStart(2, '0');
            
            document.getElementById('session-timer').textContent = formattedTime;
        }

        // Load Recent Favorites
        async function loadRecentFavorites() {
            try {
                const response = await fetch('/account/favorites/recent');
                const data = await response.json();
                
                const container = document.getElementById('recent-favorites');
                
                if (data.success && data.favorites && data.favorites.length > 0) {
                    // Clear loading message
                    container.innerHTML = '';
                    container.className = 'favorites-grid-premium loaded';
                    
                    // Add favorite items with premium styling
                    data.favorites.forEach((favorite, index) => {
                        const favoriteCard = document.createElement('div');
                        favoriteCard.className = 'favorite-card-premium';
                        favoriteCard.style.setProperty('--delay', `${index * 100}ms`);
                        
                        // Determine card gradient based on vehicle type
                        let badgeClass = '';
                        let badgeText = '';
                        switch(favorite.classification_name?.toLowerCase()) {
                            case 'luxury':
                                badgeClass = 'badge-luxury';
                                badgeText = 'Luxury';
                                break;
                            case 'sports':
                                badgeClass = 'badge-sports';
                                badgeText = 'Sports';
                                break;
                            case 'suv':
                                badgeClass = 'badge-suv';
                                badgeText = 'SUV';
                                break;
                            case 'electric':
                                badgeClass = 'badge-electric';
                                badgeText = 'Electric';
                                break;
                            default:
                                badgeClass = 'badge-premium';
                                badgeText = 'Premium';
                        }
                        
                        // Create star rating
                        const rating = favorite.priority || Math.floor(Math.random() * 3) + 3;
                        let stars = '';
                        for (let i = 1; i <= 5; i++) {
                            if (i <= rating) {
                                stars += '<i class="fas fa-star"></i>';
                            } else {
                                stars += '<i class="far fa-star"></i>';
                            }
                        }
                        
                        // Generate a random color accent based on make
                        const colors = ['#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6'];
                        const colorIndex = favorite.inv_make?.length % colors.length || 0;
                        const accentColor = colors[colorIndex];
                        
                        favoriteCard.innerHTML = `
                            <div class="favorite-card-top">
                                <div class="favorite-badge ${badgeClass}">
                                    ${badgeText}
                                </div>
                                <div class="favorite-actions">
                                    <button class="action-btn" onclick="removeFavorite('${favorite.inv_id}')">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="favorite-image-container">
                                ${favorite.inv_thumbnail ? 
                                    `<img src="${favorite.inv_thumbnail}" alt="${favorite.inv_make} ${favorite.inv_model}" loading="lazy">` : 
                                    `<div class="image-placeholder" style="background: linear-gradient(135deg, ${accentColor}20, ${accentColor}40);">
                                        <i class="fas fa-car" style="color: ${accentColor}"></i>
                                    </div>`
                                }
                                <div class="favorite-overlay" style="background: linear-gradient(transparent, ${accentColor}40)"></div>
                            </div>
                            <div class="favorite-content">
                                <div class="favorite-meta">
                                    <span class="favorite-year">${favorite.inv_year}</span>
                                    <span class="favorite-mileage">${Math.floor(Math.random() * 30) + 10}K mi</span>
                                </div>
                                <h3 class="favorite-title">${favorite.inv_make} ${favorite.inv_model}</h3>
                                <div class="favorite-rating">
                                    ${stars}
                                    <span class="rating-score">${rating}.0</span>
                                </div>
                                <div class="favorite-specs">
                                    <div class="spec-item">
                                        <i class="fas fa-gas-pump"></i>
                                        <span>${favorite.fuel_type || 'Petrol'}</span>
                                    </div>
                                    <div class="spec-item">
                                        <i class="fas fa-cog"></i>
                                        <span>${favorite.transmission || 'Auto'}</span>
                                    </div>
                                    <div class="spec-item">
                                        <i class="fas fa-palette"></i>
                                        <span>${['White', 'Black', 'Gray', 'Blue'][colorIndex]}</span>
                                    </div>
                                </div>
                                <div class="favorite-price">
                                    <div class="price-amount">$${parseFloat(favorite.inv_price).toLocaleString()}</div>
                                    <div class="price-label">Premium Value</div>
                                </div>
                                <div class="favorite-cta">
                                    <a href="/inv/detail/${favorite.inv_id}" class="view-details-btn">
                                        <i class="fas fa-eye"></i>
                                        View Details
                                    </a>
                                    <button class="test-drive-btn" onclick="scheduleTestDriveForVehicle('${favorite.inv_id}')">
                                        <i class="fas fa-calendar-alt"></i>
                                        Test Drive
                                    </button>
                                </div>
                            </div>
                        `;
                        
                        container.appendChild(favoriteCard);
                    });
                    
                    // Update saved count in stats
                    document.getElementById('saved-count').textContent = data.count;
                    document.getElementById('saved-badge-2').textContent = data.count;
                    
                } else {
                    // Show premium empty state
                    container.innerHTML = `
                        <div class="no-favorites-premium-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-heart"></i>
                            </div>
                            <h3>Your Premium Garage Awaits</h3>
                            <p>Start building your collection of exceptional vehicles</p>
                            <div class="empty-state-actions">
                                <a href="/inv/" class="browse-premium-btn">
                                    <i class="fas fa-search"></i>
                                    Browse Premium Inventory
                                </a>
                                <a href="/account/recommendations" class="get-recommendations-btn">
                                    <i class="fas fa-magic"></i>
                                    Get Recommendations
                                </a>
                            </div>
                        </div>
                    `;
                }
                
            } catch (error) {
                console.error('Error loading recent favorites:', error);
                const container = document.getElementById('recent-favorites');
                container.innerHTML = `
                    <div class="error-state-premium">
                        <i class="fas fa-exclamation-circle"></i>
                        <h3>Unable to Load Collection</h3>
                        <p>Please check your connection and try again</p>
                        <button class="retry-btn" onclick="loadRecentFavorites()">
                            <i class="fas fa-redo"></i>
                            Retry
                        </button>
                    </div>
                `;
            }
        }

        function removeFavorite(invId) {
            if (confirm('Remove this vehicle from your favorites?')) {
                // Implementation for removing favorite
                console.log('Removing favorite:', invId);
            }
        }

        function scheduleTestDriveForVehicle(invId) {
            // Implementation for scheduling test drive
            alert(`Scheduling test drive for vehicle ${invId}...`);
        }

        // Update Real-time Stats
        async function updateRealTimeStats() {
            // Load real favorites data
            await loadRecentFavorites();
            
            // Get favorite statistics
            try {
                const response = await fetch('/account/favorites/stats');
                const data = await response.json();
                
                if (data.success && data.stats) {
                    // Update saved vehicles count with real data
                    document.getElementById('saved-count').textContent = data.stats.total_favorites || 0;
                    document.getElementById('saved-badge-2').textContent = data.stats.total_favorites || 0;
                    
                    // Update trend based on activity
                    const savedTrend = document.getElementById('saved-trend');
                    if (data.stats.total_favorites > 0) {
                        const daysSinceFirst = Math.ceil((new Date() - new Date(data.stats.first_added)) / (1000 * 60 * 60 * 24));
                        const avgPerDay = (data.stats.total_favorites / Math.max(daysSinceFirst, 1)).toFixed(1);
                        savedTrend.textContent = `${avgPerDay}/day avg`;
                    }
                }
            } catch (error) {
                console.error('Error loading favorite stats:', error);
                // Keep simulated data as fallback
                simulateStatsData();
            }
        }

        function simulateStatsData() {
            const viewedCount = Math.floor(Math.random() * 5) + 10;
            document.getElementById('viewed-count').textContent = viewedCount;
            document.getElementById('viewed-trend').textContent = `${Math.floor(Math.random() * 10) + 5}%`;
            
            const savedCount = Math.floor(Math.random() * 3) + 3;
            document.getElementById('saved-count').textContent = savedCount;
            document.getElementById('saved-badge-2').textContent = savedCount;
            document.getElementById('saved-trend').textContent = `${Math.floor(Math.random() * 2) + 1} new`;
            
            // Simulate search activity
            const searchCount = Math.floor(Math.random() * 4) + 6;
            document.getElementById('search-count').textContent = searchCount;
            
            // Update inventory counts
            document.getElementById('total-vehicles').textContent = Math.floor(Math.random() * 50) + 100;
            document.getElementById('new-today').textContent = Math.floor(Math.random() * 8) + 2;
            document.getElementById('available-now').textContent = Math.floor(Math.random() * 30) + 70;
            
            // Update market insights
            document.getElementById('price-trend').textContent = `$${(Math.random() * 10000 + 40000).toLocaleString()}`;
