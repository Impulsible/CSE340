        }

        /* Inventory Management Section */
        .inventory-management-section {
            background: rgba(15, 23, 42, 0.7);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid rgba(34, 197, 94, 0.3);
            margin-top: 20px;
        }

        .inventory-management-section h3 {
