                <% if (userStats && userStats.total_favorites) { %>
                    <div class="favorites-stats" role="status" aria-live="polite">
                        <div class="stat-item">
                            <span class="stat-number"><%= userStats.total_favorites %></span>
                            <span class="stat-label">Total Saved</span>
                        </div>
                        <% if (userStats.average_priority) { %>
                            <div class="stat-item">
                                <span class="stat-number"><%= parseFloat(userStats.average_priority).toFixed(1) %></span>
                                <span class="stat-label">Avg Priority</span>
                            </div>
                        <% } %>
                        <% if (userStats.months_active) { %>
                            <div class="stat-item">
                                <span class="stat-number"><%= userStats.months_active %></span>
                                <span class="stat-label">Months Active</span>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>

            <!-- Validation Messages Container -->
            <div id="validation-messages" class="validation-container" aria-live="assertive"></div>

            <!-- Flash Messages -->
            <% if (locals.messages) { %>
                <% Object.keys(locals.messages).forEach(type => { %>
                    <% if (locals.messages[type] && locals.messages[type].length > 0) { %>
                        <div class="flash-message <%= type %>" role="alert">
                            <i class="fas fa-<%= type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle' %>"></i>
                            <%= locals.messages[type][0] %>
                        </div>
                    <% } %>
                <% }) %>
            <% } %>

            <!-- Favorites Content -->
            <% if (favorites && favorites.length > 0) { %>
                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="pagination" aria-label="Favorites pagination">
                        <ul>
                            <% if (currentPage > 1) { %>
                                <li><a href="?page=<%= currentPage - 1 %>" aria-label="Previous page">&laquo; Previous</a></li>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li>
                                    <% if (i === currentPage) { %>
                                        <span class="current" aria-current="page"><%= i %></span>
                                    <% } else { %>
                                        <a href="?page=<%= i %>"><%= i %></a>
                                    <% } %>
                                </li>
                            <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                <li><a href="?page=<%= currentPage + 1 %>" aria-label="Next page">Next &raquo;</a></li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>

                <!-- Favorites Grid -->
                <div class="favorites-grid" role="list" aria-label="List of favorite vehicles">
                    <% favorites.forEach((vehicle, index) => { %>
                        <div class="favorite-card" role="listitem" data-vehicle-id="<%= vehicle.inv_id %>">
                            <!-- Card Header -->
                            <div class="favorite-card-header">
                                <h3 id="vehicle-title-<%= index %>">
                                    <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
                                </h3>
                                
                                <!-- Priority Selector -->
                                <div class="priority-selector">
                                    <label for="priority-<%= vehicle.inv_id %>" class="sr-only">Priority</label>
                                    <select id="priority-<%= vehicle.inv_id %>" class="priority-select" 
                                            data-vehicle-id="<%= vehicle.inv_id %>"
                                            aria-label="Set priority level for <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <option value="<%= i %>" <%= vehicle.priority === i ? 'selected' : '' %>>
                                                <% if (i === 1) { %>Lowest<% } else if (i === 3) { %>Medium<% } else if (i === 5) { %>Highest<% } else { %>Priority <%= i %><% } %>
                                            </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Vehicle Image with High Quality -->
                            <div class="favorite-card-image">
                                <% if (vehicle.inv_thumbnail) { %>
                                    <!-- Lazy loading with high-quality attributes -->
                                    <img src="<%= vehicle.inv_thumbnail %>" 
                                         alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>"
                                         loading="lazy"
                                         data-src="<%= vehicle.inv_thumbnail %>"
                                         onload="this.style.opacity='1';"
                                         style="opacity:0;transition:opacity 0.3s ease-in-out;"
                                         onerror="this.onerror=null; this.style.display='none'; this.parentElement.innerHTML='<div class=\'no-image\' aria-hidden=\'true\'><i class=\'fas fa-car\'></i><span class=\'no-image-text\'>Image unavailable</span></div>';">
                                <% } else { %>
                                    <div class="no-image" aria-hidden="true">
                                        <i class="fas fa-car"></i>
                                        <span class="no-image-text">Image unavailable</span>
                                        <span class="sr-only">No image available for <%= vehicle.inv_make %> <%= vehicle.inv_model %></span>
                                    </div>
                                <% } %>
                            </div>
                            
                            <!-- Current Notes Display (Beautifully Styled) -->
                            <div class="notes-display">
                                <div class="notes-display-content">
                                    <% if (vehicle.notes && vehicle.notes.trim()) { %>
                                        <p class="notes-display-text">"<%= vehicle.notes %>"</p>
                                    <% } else { %>
                                        <p class="notes-display-empty">No notes added yet. Click the edit icon to add notes.</p>
                                    <% } %>
                                    <i class="fas fa-edit notes-edit-icon" 
                                       data-vehicle-id="<%= vehicle.inv_id %>"
                                       aria-label="Edit notes for <%= vehicle.inv_make %> <%= vehicle.inv_model %>"></i>
                                </div>
                            </div>
                            
                            <!-- Notes Input Section (Hidden by default) -->
                            <div class="notes-input-section" id="notes-input-<%= vehicle.inv_id %>">
                                <textarea id="notes-<%= vehicle.inv_id %>" 
                                          class="notes-input" 
                                          placeholder="Add or edit your notes about this vehicle (max 500 characters)..."
                                          data-vehicle-id="<%= vehicle.inv_id %>"
                                          aria-label="Notes for <%= vehicle.inv_make %> <%= vehicle.inv_model %>"
                                          maxlength="500"><%= vehicle.notes || '' %></textarea>
                                <div class="notes-actions">
                                    <div id="notes-counter-<%= vehicle.inv_id %>" class="notes-counter">
                                        <%= (vehicle.notes || '').length %>/500 characters
                                    </div>
                                    <button class="cancel-notes-btn" data-vehicle-id="<%= vehicle.inv_id %>">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                    <button class="save-notes-btn" data-vehicle-id="<%= vehicle.inv_id %>">
                                        <i class="fas fa-save"></i> Save Notes
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Vehicle Details -->
                            <div class="favorite-card-details">
                                <dl>
                                    <dt>Classification:</dt>
                                    <dd><%= vehicle.classification_name %></dd>
                                    
                                    <dt>Price:</dt>
                                    <dd>$<%= parseFloat(vehicle.inv_price).toLocaleString('en-US', {minimumFractionDigits: 2}) %></dd>
                                    
                                    <dt>Mileage:</dt>
                                    <dd><%= vehicle.inv_miles.toLocaleString() %> miles</dd>
                                    
                                    <dt>Color:</dt>
                                    <dd><%= vehicle.inv_color %></dd>
                                    
                                    <dt>Added:</dt>
                                    <dd><%= new Date(vehicle.created_at).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></dd>
                                </dl>
                                
                                <p class="description"><%= vehicle.inv_description.substring(0, 150) %>...</p>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="favorite-card-actions">
                                <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn btn-view" 
                                   aria-label="View details of <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                                    <i class="fas fa-eye" aria-hidden="true"></i> View Details
                                </a>
                                
                                <button class="btn btn-remove remove-favorite-btn" 
                                        data-vehicle-id="<%= vehicle.inv_id %>"
                                        aria-label="Remove <%= vehicle.inv_make %> <%= vehicle.inv_model %> from favorites">
                                    <i class="fas fa-trash" aria-hidden="true"></i> Remove
                                </button>
                            </div>
                            
                            <!-- Card Footer -->
                            <div class="favorite-card-footer">
                                <small>Priority level: <%= vehicle.priority %>/5</small>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                <!-- Export and Actions -->
                <div class="favorites-actions">
                    <a href="/account/favorites/export" class="btn btn-export" 
                       aria-label="Export favorites list as CSV file">
                        <i class="fas fa-download"></i> Export to CSV
                    </a>
                    <a href="/inv/" class="btn btn-primary" aria-label="Browse more vehicles">
                        <i class="fas fa-car"></i> Browse More Vehicles
                    </a>
                    <a href="/account/dashboard" class="btn btn-secondary" aria-label="Return to account dashboard">
                        <i class="fas fa-user"></i> Back to Dashboard
                    </a>
                </div>
                
            <% } else { %>
                <!-- Empty State -->
                <div class="no-favorites" role="alert" aria-live="polite">
                    <div class="empty-state">
                        <i class="fas fa-heart" aria-hidden="true"></i>
                        <h2>No Favorite Vehicles Yet</h2>
                        <p>Start building your dream garage by saving vehicles you're interested in.</p>
                        
                        <!-- Quick Tips -->
                        <div class="tips">
                            <h3>How to save vehicles:</h3>
                            <ol>
                                <li>Browse our <a href="/inv/">inventory</a></li>
                                <li>Click the heart icon on any vehicle page</li>
                                <li>Set priority levels and add notes</li>
                                <li>Compare and manage your favorites here</li>
                            </ol>
                        </div>
                        
                        <a href="/inv/" class="btn btn-primary" aria-label="Browse vehicle inventory">
                            <i class="fas fa-car"></i> Start Browsing
                        </a>
                    </div>
                </div>
            <% } %>
        </main>

       
    </div>

    <!-- JavaScript with Image Quality Optimizations -->
    <script>
        class FavoritesManager {
            constructor() {
                this.debounceTimers = {};
                this.initEventListeners();
                this.setupValidation();
                this.initializeAccessibility();
                this.setupImageLoading();
            }
            
            setupImageLoading() {
                // Progressive image loading for better perceived performance
                const images = document.querySelectorAll('.favorite-card-image img[data-src]');
                
                if ('IntersectionObserver' in window) {
                    const imageObserver = new IntersectionObserver((entries, observer) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                const img = entry.target;
                                const src = img.getAttribute('data-src');
                                
                                if (src) {
                                    // Create a new image to preload
                                    const tempImg = new Image();
                                    tempImg.src = src;
                                    tempImg.onload = () => {
                                        img.src = src;
                                        img.removeAttribute('data-src');
                                        img.style.opacity = '1';
                                        imageObserver.unobserve(img);
                                    };
                                    tempImg.onerror = () => {
                                        // Handle image load error
                                        img.style.display = 'none';
                                        const parent = img.parentElement;
                                        parent.innerHTML = `
                                            <div class="no-image" aria-hidden="true">
                                                <i class="fas fa-car"></i>
                                                <span class="no-image-text">Image unavailable</span>
                                                <span class="sr-only">No image available</span>
                                            </div>
                                        `;
                                        imageObserver.unobserve(img);
                                    };
                                }
                            }
                        });
                    }, {
                        rootMargin: '50px 0px',
                        threshold: 0.1
                    });
                    
                    images.forEach(img => imageObserver.observe(img));
                } else {
                    // Fallback for browsers without IntersectionObserver
                    images.forEach(img => {
                        const src = img.getAttribute('data-src');
                        if (src) {
                            img.src = src;
                            img.removeAttribute('data-src');
                            img.style.opacity = '1';
                        }
                    });
                }
            }
            
            initEventListeners() {
                // Remove favorite buttons
                document.querySelectorAll('.remove-favorite-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => this.handleRemoveFavorite(e));
                });
                
                // Priority selectors
                document.querySelectorAll('.priority-select').forEach(select => {
                    select.addEventListener('change', (e) => this.handlePriorityChange(e));
                });
                
                // Notes edit icons
                document.querySelectorAll('.notes-edit-icon').forEach(icon => {
                    icon.addEventListener('click', (e) => this.handleEditNotes(e));
                });
                
                // Notes save buttons
                document.querySelectorAll('.save-notes-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => this.handleSaveNotes(e));
                });
                
                // Notes cancel buttons
                document.querySelectorAll('.cancel-notes-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => this.handleCancelNotes(e));
                });
                
                // Notes input validation
                document.querySelectorAll('.notes-input').forEach(textarea => {
                    textarea.addEventListener('input', (e) => {
                        this.validateNotes(e.target);
                    });
                });
                
                // Export button
                const exportBtn = document.querySelector('.btn-export');
                if (exportBtn) {
                    exportBtn.addEventListener('click', (e) => this.handleExport(e));
                }
                
                // Prevent image blur on hover by preloading hover state
                this.preloadImageHoverEffects();
            }
            
            preloadImageHoverEffects() {
                // This helps prevent blur during hover animations
                const cards = document.querySelectorAll('.favorite-card');
                cards.forEach(card => {
                    card.addEventListener('mouseenter', () => {
                        const img = card.querySelector('.favorite-card-image img');
                        if (img && img.complete) {
                            // Force browser to prepare for animation
                            img.style.willChange = 'transform';
                        }
                    });
                    
                    card.addEventListener('mouseleave', () => {
                        const img = card.querySelector('.favorite-card-image img');
                        if (img) {
                            img.style.willChange = 'auto';
                        }
                    });
                });
            }
            
            setupValidation() {
                // Initialize notes counters
                document.querySelectorAll('.notes-input').forEach(textarea => {
                    this.validateNotes(textarea);
                });
            }
            
            initializeAccessibility() {
                // Add keyboard navigation
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape') {
                        this.closeAllOpenNotesEditors();
                    }
                });
                
                // Focus management
                const mainContent = document.getElementById('main-content');
                if (mainContent) {
                    mainContent.setAttribute('tabindex', '-1');
                    mainContent.focus();
                }
                
                // Image accessibility
                document.querySelectorAll('.favorite-card-image img').forEach(img => {
                    if (!img.getAttribute('alt')) {
                        const card = img.closest('.favorite-card');
                        const title = card.querySelector('h3').textContent;
                        img.setAttribute('alt', title);
                    }
                });
            }
            
            validateNotes(textarea) {
                const maxLength = 500;
                const currentLength = textarea.value.length;
                const vehicleId = textarea.dataset.vehicleId;
                const counter = document.getElementById(`notes-counter-${vehicleId}`);
                
                if (counter) {
                    counter.textContent = `${currentLength}/${maxLength} characters`;
                    
                    if (currentLength > maxLength) {
                        counter.classList.add('error');
                        this.showValidationMessage(`Notes cannot exceed ${maxLength} characters`, 'error');
                        return false;
                    } else {
                        counter.classList.remove('error');
                        return true;
                    }
                }
                return true;
            }
            
            handleEditNotes(event) {
                const icon = event.currentTarget;
                const vehicleId = icon.dataset.vehicleId;
                
                // Close any other open editors first
                this.closeAllOpenNotesEditors();
                
                // Show the input section
                const inputSection = document.getElementById(`notes-input-${vehicleId}`);
                const textarea = document.getElementById(`notes-${vehicleId}`);
                
                inputSection.classList.add('active');
                setTimeout(() => {
                    textarea.focus();
                    textarea.setSelectionRange(textarea.value.length, textarea.value.length);
                }, 10);
                
                // Scroll the textarea into view if needed
                inputSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
            
            handleCancelNotes(event) {
                const button = event.currentTarget;
                const vehicleId = button.dataset.vehicleId;
                const inputSection = document.getElementById(`notes-input-${vehicleId}`);
                const textarea = document.getElementById(`notes-${vehicleId}`);
                
                // Reset textarea to original value
                const originalNotes = textarea.defaultValue || '';
                textarea.value = originalNotes;
                this.validateNotes(textarea);
                
                inputSection.classList.remove('active');
            }
            
            closeAllOpenNotesEditors() {
                document.querySelectorAll('.notes-input-section.active').forEach(section => {
                    const textarea = section.querySelector('textarea');
                    const vehicleId = textarea.dataset.vehicleId;
                    const originalTextarea = document.getElementById(`notes-${vehicleId}`);
                    
                    // Reset to original value
                    textarea.value = originalTextarea.defaultValue || '';
                    this.validateNotes(textarea);
                    
                    section.classList.remove('active');
                });
            }
            
            async handleRemoveFavorite(event) {
                const button = event.currentTarget;
                const vehicleId = button.dataset.vehicleId;
                const card = button.closest('.favorite-card');
                const vehicleName = card.querySelector('h3').textContent;
                
                if (!confirm(`Are you sure you want to remove "${vehicleName}" from your favorites?`)) {
                    return;
                }
                
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Removing...';
                
                try {
                    const response = await fetch('/account/favorites/toggle', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({ vehicle_id: vehicleId })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Animate removal
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'translateX(-100px)';
                        
                        setTimeout(() => {
                            card.remove();
                            this.updateStats(result.userStats);
                            this.showValidationMessage(result.message, 'success');
                            
                            // Check if empty
                            const remaining = document.querySelectorAll('.favorite-card').length;
                            if (remaining === 0) {
                                setTimeout(() => location.reload(), 1000);
                            }
                        }, 300);
                    } else {
                        throw new Error(result.message || 'Failed to remove favorite');
                    }
                } catch (error) {
                    console.error('Remove favorite error:', error);
                    button.disabled = false;
                    button.innerHTML = '<i class="fas fa-trash"></i> Remove';
                    this.showValidationMessage('Failed to remove favorite. Please try again.', 'error');
                }
            }
            
            async handlePriorityChange(event) {
                const select = event.target;
                const vehicleId = select.dataset.vehicleId;
                const priority = select.value;
                
                // Store original value for rollback
                if (!select.dataset.originalValue) {
                    select.dataset.originalValue = select.value;
                }
                
                // Show loading state
                const originalText = select.options[select.selectedIndex].text;
                select.disabled = true;
                
                try {
                    const response = await fetch('/account/favorites/update-priority', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ 
                            vehicle_id: vehicleId, 
                            priority: parseInt(priority) 
                        })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        this.showValidationMessage('Priority updated successfully', 'success');
                        
                        // Update the card footer
                        const card = select.closest('.favorite-card');
                        const footer = card.querySelector('.favorite-card-footer small');
                        if (footer) {
                            footer.textContent = `Priority level: ${priority}/5`;
                        }
                        
                        // Update stored original value
                        select.dataset.originalValue = priority;
                    } else {
                        throw new Error(result.message || 'Failed to update priority');
                    }
                } catch (error) {
                    console.error('Priority update error:', error);
                    this.showValidationMessage('Failed to update priority', 'error');
                    // Revert selection
                    select.value = select.dataset.originalValue;
                } finally {
                    select.disabled = false;
                }
            }
            
            async handleSaveNotes(event) {
                const button = event.currentTarget;
                const vehicleId = button.dataset.vehicleId;
                const textarea = document.getElementById(`notes-${vehicleId}`);
                const inputSection = document.getElementById(`notes-input-${vehicleId}`);
                
                if (!this.validateNotes(textarea)) {
                    return;
                }
                
                const notes = textarea.value;
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
                
                try {
                    const response = await fetch('/account/favorites/update-notes', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ 
                            vehicle_id: vehicleId, 
                            notes: notes 
                        })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Update the notes display
                        const notesDisplay = document.querySelector(`[data-vehicle-id="${vehicleId}"] .notes-display-text`) ||
                                           document.querySelector(`[data-vehicle-id="${vehicleId}"] .notes-display-empty`);
                        const notesDisplayContent = document.querySelector(`[data-vehicle-id="${vehicleId}"] .notes-display-content`);
                        
                        if (notes && notes.trim()) {
                            if (notesDisplay.classList.contains('notes-display-empty')) {
                                notesDisplay.classList.remove('notes-display-empty');
                                notesDisplay.classList.add('notes-display-text');
                            }
                            notesDisplay.textContent = `"${notes}"`;
                        } else {
                            notesDisplay.classList.remove('notes-display-text');
                            notesDisplay.classList.add('notes-display-empty');
                            notesDisplay.textContent = 'No notes added yet. Click the edit icon to add notes.';
                        }
                        
                        // Update textarea default value for future cancels
                        textarea.defaultValue = notes;
                        
                        // Hide the input section
                        inputSection.classList.remove('active');
                        
                        this.showValidationMessage('Notes saved successfully', 'success');
                    } else {
                        throw new Error(result.message || 'Failed to save notes');
                    }
                } catch (error) {
                    console.error('Save notes error:', error);
                    this.showValidationMessage('Failed to save notes', 'error');
                } finally {
                    button.disabled = false;
                    button.innerHTML = '<i class="fas fa-save"></i> Save Notes';
                }
            }
            
            showValidationMessage(message, type) {
                const container = document.getElementById('validation-messages');
                const messageEl = document.createElement('div');
                
                messageEl.className = `validation-message ${type}`;
                messageEl.setAttribute('role', 'alert');
                messageEl.innerHTML = `
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                    <span>${message}</span>
                `;
                
                // Clear previous messages
                container.innerHTML = '';
                container.appendChild(messageEl);
                
                // Auto-remove after 5 seconds
                setTimeout(() => {
                    messageEl.style.opacity = '0';
                    setTimeout(() => {
                        if (messageEl.parentNode === container) {
                            messageEl.remove();
                        }
                    }, 300);
                }, 5000);
            }
            
            updateStats(stats) {
                if (stats && stats.total_favorites) {
                    const totalEl = document.querySelector('.stat-item:first-child .stat-number');
                    const avgPriorityEl = document.querySelector('.stat-item:nth-child(2) .stat-number');
                    
                    if (totalEl) {
                        totalEl.textContent = stats.total_favorites;
                    }
                    
                    if (avgPriorityEl && stats.average_priority) {
                        avgPriorityEl.textContent = parseFloat(stats.average_priority).toFixed(1);
                    }
                    
                    // Update favorites description
                    const desc = document.getElementById('favorites-description');
                    if (desc) {
                        desc.innerHTML = `Your saved vehicles list. You have <strong>${stats.total_favorites}</strong> saved vehicles.`;
                    }
                }
            }
            
            handleExport(event) {
                // Export is handled by the link href, but we can add confirmation
                if (!confirm('Export your favorites as a CSV file? This may take a moment.')) {
                    event.preventDefault();
                }
            }
        }
        
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new FavoritesManager();
        });
    </script>
</body>
