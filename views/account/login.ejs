<div class="login-container">
  <h1 class="welcome"><%= title %></h1>
  <p>Sign in to view orders, service history, and saved builds.</p>

  <!-- Flash Messages -->
  <% if (flashMessages) { %>
    <% Object.keys(flashMessages).forEach(type => { %>
      <% flashMessages[type].forEach(message => { %>
        <div class="alert alert-<%= type %>">
          <i class="fas fa-<%= type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle' %>"></i>
          <%= message %>
        </div>
      <% }) %>
    <% }) %>
  <% } %>

  <!-- LOGIN FORM WITH HTML5 CLIENT-SIDE VALIDATION -->
  <form action="/account/login" method="post" novalidate class="login-form">
    
    <!-- Email -->
    <div class="form-group">
      <label for="account_email" class="form-label">
        <i class="fas fa-envelope"></i>
        Email Address
      </label>
      <input 
        type="email" 
        id="account_email" 
        name="account_email" 
        class="form-input"
        required
        placeholder="your.email@example.com"
        value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      >
      <div class="input-focus-border"></div>
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="account_password" class="form-label">
        <i class="fas fa-lock"></i>
        Password
      </label>

      <!-- Requirement reminder (CSE 340 required) -->
      <div class="password-requirements">
        <div class="requirements-header">
          <i class="fas fa-info-circle"></i>
          <strong>Password Requirements</strong>
        </div>
        <ul class="requirements-list">
          <li class="requirement-item">
            <i class="fas fa-check-circle"></i>
            At least 12 characters
          </li>
          <li class="requirement-item">
            <i class="fas fa-check-circle"></i>
            At least 1 uppercase letter
          </li>
          <li class="requirement-item">
            <i class="fas fa-check-circle"></i>
            At least 1 number
          </li>
          <li class="requirement-item">
            <i class="fas fa-check-circle"></i>
            At least 1 special character
          </li>
        </ul>
      </div>

      <div class="password-input-container">
        <input 
          type="password" 
          id="account_password" 
          name="account_password" 
          class="form-input password-input"
          required
          minlength="12"
          pattern="^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$"
          placeholder="Enter your password"
          title="At least 12 characters, including 1 uppercase letter, 1 number, and 1 special character."
        >
        <button type="button" class="password-toggle" aria-label="Toggle password visibility">
          <i class="fas fa-eye"></i>
        </button>
        <div class="input-focus-border"></div>
      </div>
      
      <!-- Password strength indicator -->
      <div class="password-strength">
        <div class="strength-label">Password Strength: <span class="strength-text">Enter password</span></div>
        <div class="strength-bar">
          <div class="strength-progress" data-strength="0"></div>
        </div>
      </div>
    </div>

    <button type="submit" class="btn-login">
      <i class="fas fa-sign-in-alt"></i>
      Sign In
    </button>
  </form>

  <div class="register-link">
    <p>Don't have an account? <a href="/account/register" class="register-cta">Register here</a></p>
  </div>

  <p><a class="back-home" href="/">
    <i class="fas fa-arrow-left"></i>
    Back to Home
  </a></p>
</div>

<style>
  /* Keep original container styles */
  .login-container {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .welcome {
    text-align: center;
    color: #333;
    margin-bottom: 10px;
    font-family: Raleway, system-ui, sans-serif;
    font-weight: 800;
    font-size: 1.8rem;
    color: #0c1022;
  }

  .welcome::after {
    content: "";
    display: block;
    width: 60px;
    height: 3px;
    background: linear-gradient(135deg, #059669, #047857);
    margin: 8px auto 0;
    border-radius: 2px;
  }

  .login-container > p {
    text-align: center;
    color: #64748b;
    margin-bottom: 25px;
    line-height: 1.5;
  }

  /* Enhanced Form Styles */
  .form-group {
    margin-bottom: 25px;
    position: relative;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #0c1022;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .form-input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 16px;
    box-sizing: border-box;
    transition: all 0.3s ease;
    background: #f8fafc;
    font-family: inherit;
  }

  .input-focus-border {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: #059669;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .form-input:focus {
    outline: none;
    border-color: #059669;
    background: white;
    box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.1);
  }

  .form-input:focus ~ .input-focus-border {
    width: 100%;
  }

  /* Enhanced Password Requirements */
  .password-requirements {
    background: #f0fdf4;
    border: 2px solid #bbf7d0;
    border-radius: 8px;
    padding: 12px 16px;
    margin-top: 8px;
    margin-bottom: 12px;
  }

  .requirements-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    color: #166534;
    font-weight: 600;
  }

  .requirements-header i {
    color: #059669;
  }

  .requirements-list {
    margin: 0;
    padding-left: 0;
    list-style: none;
  }

  .requirement-item {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;
    color: #166534;
    font-size: 0.9rem;
  }

  .requirement-item i {
    font-size: 0.8rem;
    color: #059669;
  }

  /* Password Input Container */
  .password-input-container {
    position: relative;
  }

  .password-toggle {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #64748b;
    cursor: pointer;
    padding: 4px;
  }

  .password-toggle:hover {
    color: #059669;
  }

  /* Enhanced Password Strength */
  .password-strength {
    margin-top: 10px;
  }

  .strength-label {
    font-size: 0.9rem;
    color: #64748b;
    margin-bottom: 6px;
  }

  .strength-text {
    font-weight: 600;
  }

  .strength-bar {
    height: 6px;
    background: #e2e8f0;
    border-radius: 3px;
    overflow: hidden;
  }

  .strength-progress {
    height: 100%;
    width: 0%;
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .strength-progress[data-strength="0"] { width: 0%; background: #e2e8f0; }
  .strength-progress[data-strength="1"] { width: 25%; background: #dc2626; }
  .strength-progress[data-strength="2"] { width: 50%; background: #f59e0b; }
  .strength-progress[data-strength="3"] { width: 75%; background: #3b82f6; }
  .strength-progress[data-strength="4"] { width: 100%; background: #059669; }

  /* Enhanced Alerts */
  .alert {
    padding: 15px 20px;
    border-radius: 8px;
    margin: 15px 0;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 12px;
    border: 2px solid;
  }

  .alert-success {
    background: #f0fdf4;
    color: #166534;
    border-color: #bbf7d0;
  }

  .alert-error {
    background: #fef2f2;
    color: #991b1b;
    border-color: #fecaca;
  }

  .alert-notice {
    background: #dbeafe;
    color: #1e40af;
    border-color: #bfdbfe;
  }

  /* Enhanced Buttons */
  .btn-login {
    background: linear-gradient(135deg, #059669, #047857);
    color: #fff;
    padding: 14px;
    border: none;
    width: 100%;
    border-radius: 8px;
    cursor: pointer;
    margin-bottom: 20px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(5, 150, 105, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .btn-login:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.4);
    background: linear-gradient(135deg, #047857, #065f46);
  }

  /* Enhanced Links */
  .register-link {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 15px;
  }

  .register-link p {
    color: #64748b;
    margin: 0;
  }

  .register-cta {
    color: #059669;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .register-cta:hover {
    color: #047857;
  }

  .back-home {
    color: #64748b;
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: color 0.3s ease;
  }

  .back-home:hover {
    color: #059669;
  }

  /* Remove old validation icons since we have better focus states */
  input:required:invalid, input:focus:invalid,
  input:required:valid, input:focus:valid {
    background-image: none;
    padding-right: 16px;
  }

  /* Enhanced validation states */
  .form-input:invalid:not(:focus):not(:placeholder-shown) {
    border-color: #fecaca;
    background: #fef2f2;
  }

  .form-input:valid:not(:focus):not(:placeholder-shown) {
    border-color: #bbf7d0;
    background: #f0fdf4;
  }
</style>

<!-- ==================== JAVASCRIPT (REAL-TIME FEEDBACK) ==================== -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Password visibility toggle
  const passwordToggle = document.querySelector('.password-toggle');
  const passwordInput = document.getElementById('account_password');
  const strengthProgress = document.querySelector('.strength-progress');
  const strengthText = document.querySelector('.strength-text');
  
  if (passwordToggle && passwordInput) {
    passwordToggle.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
    });
  }

  // Enhanced password strength indicator

  if (passwordInput && strengthProgress) {
    passwordInput.addEventListener('input', function() {
      const value = this.value;
      let strength = 0;

      if (value.length >= 12) strength++;
      if (/[A-Z]/.test(value)) strength++;
      if (/[0-9]/.test(value)) strength++;
      if (/[^a-zA-Z0-9]/.test(value)) strength++;

      // Update strength indicator
      strengthProgress.setAttribute('data-strength', strength);
      
      // Update strength text
      const strengthLabels = ['Weak', 'Fair', 'Good', 'Strong'];
      strengthText.textContent = value.length > 0 ? strengthLabels[strength] || 'Weak' : 'Enter password';
      strengthText.style.color = value.length > 0 ? 
        ['#dc2626', '#f59e0b', '#3b82f6', '#059669'][strength] || '#dc2626' : 
        '#64748b';
    });
  }
});
</script>